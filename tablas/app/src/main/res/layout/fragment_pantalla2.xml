<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".pantalla2Fragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trabajo en memoria externa"
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:textStyle="normal|bold"
        android:textSize="23sp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="1">

        <TextView
            android:text="Contenido a guardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@id/textView"
            android:textStyle="normal|bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/txtGuardarExterna"
            android:layout_weight="1"
            android:background="?attr/colorAccent" />

        <Button
            android:text="Guardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnGuardarExterna"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:text="Contenido en Archivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textStyle="normal|bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtLeerExterna"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_light" />

        <Button
            android:text="Leer desde archivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnLeerExterna"/>



    </LinearLayout>


</LinearLayout>